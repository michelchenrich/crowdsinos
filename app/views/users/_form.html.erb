<%= form_for @user, :html => { :class => "form-horizontal" }, :url => new ? 'register' : 'edit_user_profile' do |form| %>
  <%= form_errors_block @user %>

  <% if new %>
    <%= form_input(form, @user, :username) do %>
      <%= form.text_field :username %>
    <% end %>
  <% end %>

  <%= form_input(form, @user, :email) do %>
    <%= form.text_field :email %>
  <% end %>

  <%= form_input(form, @user, :password) do %>
    <%= form.password_field :password %>
  <% end %>

  <%= form_input(form, @user, :password_confirmation) do %>
    <%= form.password_field :password_confirmation %>
  <% end %>

  <%= form_input(form, @user, :password_confirmation) do %>
    <%= form.password_field :password_confirmation %>
  <% end %>

  <% if new %>
    <%= form_input(form, @user, :type) do %>
      <%= form.select :type, User.select_options %>
    <% end %>
  <% end %>

  <%= form_submit form do %>
    <%= form.submit new ? 'Register' : 'Update Profile', :class => "btn btn-primary" %>
  <% end %>
<% end %>
